{% set uniqid = uniqid ?? uniqid('sqlitenuad_', true) %}

<div id="sqlite-database-{{ uniqid }}"
     class="tab-pane {{ active is defined and active ? 'active' }}">
    <div class="form-group col-xs-12 col-sm-6">
        <label for="sqlite-databases-{{ uniqid }}-name">
            DB Name
        </label>
        <input type="text" id="sqlite-databases-{{ uniqid }}-name"
               name="sqlite[databases][{{ uniqid }}][name]"
               placeholder="database_name" class="form-control"
               value="{{ database.name }}" />
    </div>

    <div class="form-group col-xs-12 col-sm-6">
        <label for="sqlite-databases-{{ uniqid }}-owner">
            Owner
        </label>
        <input type="text" id="sqlite-databases-{{ uniqid }}-owner"
               name="sqlite[databases][{{ uniqid }}][owner]"
               placeholder="owner" class="form-control"
               value="{{ database.owner }}" />
        <div class="help-block">
            Provide the user that will be the database owner.
            The user must be a valid unix user such as <code>www-data</code>.
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="form-group col-xs-12 col-sm-6">
        <label for="sqlite-databases-{{ uniqid }}-group">
            Group
        </label>
        <input type="text" id="sqlite-databases-{{ uniqid }}-group"
               name="sqlite[databases][{{ uniqid }}][group]"
               placeholder="group" class="form-control"
               value="{{ database.group }}" />
        <div class="help-block">
            Provide a valid unix group for the database.
        </div>
    </div>

    <div class="form-group col-xs-12 col-sm-6">
        <label for="sqlite-databases-{{ uniqid }}-sql_file">
            Import Database From File
        </label>
        <input type="text" id="sqlite-databases-{{ uniqid }}-sql_file"
               name="sqlite[databases][{{ uniqid }}][sql_file]"
               placeholder="/var/www/sql/database_name.sql" class="form-control"
               value="{{ database.sql_file }}" />
        <div class="help-block">
            Optional. Make sure this file is inside the VM before running
            <code>$ vagrant up</code>.
        </div>
    </div>

    <div class="clearfix"></div>
</div>
