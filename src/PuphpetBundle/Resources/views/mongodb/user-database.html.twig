{% set uniqid = uniqid ?? uniqid('mongodbnuad_', true) %}

<div id="mongodb-database-{{ uniqid }}"
     class="tab-pane {{ active is defined and active ? 'active' }}">
    <div class="help-block col-xs-12">
        If you want to assign a user to multiple databases, simply create more databases and type in
        the same username and password. Only the password for the first entry will be considered,
        <strong>but all fields must be completed</strong>!
    </div>

    <div class="clearfix"></div>

    <div class="form-group col-xs-12 col-sm-6">
        <label for="mongodb-databases-{{ uniqid }}-name">
            Database
        </label>
        <input type="text" id="mongodb-databases-{{ uniqid }}-name"
               name="mongodb[databases][{{ uniqid }}][name]"
               placeholder="database_name" class="form-control"
               value="{{ database.name }}" />
    </div>

    <div class="form-group col-xs-12 col-sm-6">
        <label for="mongodb-databases-{{ uniqid }}-user">
            Username
        </label>
        <input type="text" id="mongodb-databases-{{ uniqid }}-user"
               name="mongodb[databases][{{ uniqid }}][user]"
               placeholder="username" class="form-control"
               value="{{ database.user }}" />
    </div>

    <div class="clearfix"></div>

    <div class="form-group col-xs-12 col-sm-6">
        <label for="mongodb-databases-{{ uniqid }}-password">
            Password
        </label>
        <input type="text" id="mongodb-databases-{{ uniqid }}-password"
               name="mongodb[databases][{{ uniqid }}][password]"
               placeholder="123" class="form-control"
               value="{{ database.password }}" />
        <div class="help-block">
            This cannot be blank!
        </div>
    </div>

    <div class="clearfix"></div>
</div>
